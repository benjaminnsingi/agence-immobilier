{{ form_start(form, {attr: {class: 'filter'}}) }}
    <h4>Voir tous nos biens</h4>
   {{ form_row(form.categories) }}

   <h4>Prix</h4>
   <div class="row">
       <div class="col-md-6">
           {{ form_row(form.min) }}
       </div>
       <div class="col-md-6">
           {{ form_row(form.max) }}
       </div>
   </div>
   <div id="price-slider" data-min="{{ min }}" data-max="{{ max }}" style="margin-bottom: 3rem;"></div>
   <button type="submit" class="btn btn-primary w-100">Filter</button>
{{ form_end(form) }}