<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}
</head>
<body>
<div>
    <div class="sidebar">
        <div class="logo-details">
            <i class='bx bxl-c-plus-plus'></i>
            <a href="{{ path('home') }}" style="text-decoration: none;"><span class="logo_name">BenImmo</span></a>
        </div>
        <ul class="nav-links">
            <li>
                <a href="{{ path('admin_user_list') }}" class="active">
                    <i class='bx bx-grid-alt' ></i>
                    <span class="links_name">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="{{ path('admin_user_list') }}">
                    <i class='bx bx-box' ></i>
                    <span class="links_name">Utilisateurs</span>
                </a>
            </li>
            <li>
                <a href="{{ path('category_index') }}">
                    <i class='bx bx-list-ul' ></i>
                    <span class="links_name">Categories</span>
                </a>
            </li>
            <li>
                <a href="{{ path('option_index') }}">
                    <i class='bx bx-pie-chart-alt-2' ></i>
                    <span class="links_name">Options</span>
                </a>
            </li>
            <li class="log_out">
                <a href="{{ path('app_logout') }}">
                    <i class='bx bx-log-out'></i>
                    <span class="links_name">Deconnexion</span>
                </a>
            </li>
        </ul>
    </div>
    <section class="home-section">
        {% include 'admin/navbar.html.twig' %}
        <div class="container">
            <div class="home-content">
                {% block content %}{% endblock %}
            </div>
        </div>
    </section>
</div>
</body>
</html>